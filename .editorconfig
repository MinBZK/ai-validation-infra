# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
line_length = 120
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_size = 2

[*.pub]
insert_final_newline = false

[LICENSE]
insert_final_newline = false
